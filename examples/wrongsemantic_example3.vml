class A(a, b):

    x = a
    y = b

    method square_sum(x, y) # использование полей при передаче внешних аргументов в метод
        return (x * x) + (y * y) + (2 * x * y) 

a_obj = A() # Пустая или неполноценная инициализация, когда класс требует аргументы для инициализации
a_obj.x = 7 # Перезапись поля вне класса
z = a_obj.z # Обращение к несуществующему полю класса